export component StatusBarView inherits Rectangle {
    // --- Theme Colors (passed from parent) ---
    in property <color> color-statusbar-bg;
    in property <color> color-text-muted;

    // --- State Properties (passed from parent) ---
    in-out property <string> status_text;
    in-out property <bool> show-list-view; // To toggle on click

    height: 25px;
    width: 100%;
    background: root.color-statusbar-bg;
    HorizontalLayout {
        spacing: 15px;
        padding-right: 10px;
        padding-left: 10px;
        width: 100%; // Ensure HorizontalLayout takes full width of StatusBarView
        height: 100%; // Ensure HorizontalLayout takes full height

        Text {
            width: 20px;
            text: "◀";
            horizontal-alignment: left;
            vertical-alignment: center;
            color: root.color-text-muted;
        }

        TouchArea {
            clicked => {
                root.show-list-view = !root.show-list-view;
            }
            // Take available horizontal space
            horizontal-stretch: 1;
            // Ensure it's centered vertically within the status bar
            Rectangle { // Use a Rectangle for positioning and stretching
                height: 100%;
                horizontal-stretch: 1;
                background: transparent; // Make it invisible
                Text { // Status Text inside TouchArea, centered within the Rectangle
                    horizontal-alignment: center;
                    vertical-alignment: center;
                    text: root.status_text;
                    color: root.color-text-muted;
                }
            }
        }

        Text {
            width: 20px;
            text: "▶";
            horizontal-alignment: right;
            vertical-alignment: center;
            color: root.color-text-muted;
        }
    }
}
